<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_50"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_email"
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/height_50"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/email" />

                <TextView
                    android:id="@+id/tv_email_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/iv_email"
                    android:background="@drawable/reddot"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/write"
                    android:textSize="@dimen/text_11" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/email_tip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15" />

                <TextView
                    android:id="@+id/tv_email_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_email_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:singleLine="true"
                    android:text="昨天"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line" />

        <LinearLayout
            android:id="@+id/ll_notice"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_50"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_notice"
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/height_50"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/notice" />

                <TextView
                    android:id="@+id/tv_notice_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/iv_notice"
                    android:background="@drawable/reddot"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/write"
                    android:textSize="@dimen/text_11" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/notice"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15" />

                <TextView
                    android:id="@+id/tv_notice_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_notice_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:singleLine="true"
                    android:text="昨天"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line" />

        <LinearLayout
            android:id="@+id/ll_tidings"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_50"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_tidings"
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/height_50"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tidings" />

                <TextView
                    android:id="@+id/tv_tidings_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/iv_tidings"
                    android:background="@drawable/reddot"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/write"
                    android:textSize="@dimen/text_11" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/tidings"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15" />

                <TextView
                    android:id="@+id/tv_tidings_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_tidings_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:singleLine="true"
                    android:text="昨天"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line" />

        <LinearLayout
            android:id="@+id/ll_workflow"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_50"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/iv_workflow"
                    android:layout_width="@dimen/height_50"
                    android:layout_height="@dimen/height_50"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/workflow" />

                <TextView
                    android:id="@+id/tv_workflow_unread"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/iv_workflow"
                    android:background="@drawable/reddot"
                    android:gravity="center"
                    android:text="11"
                    android:textColor="@color/write"
                    android:textSize="@dimen/text_11" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_5" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/work_flow"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15" />

                <TextView
                    android:id="@+id/tv_workflow_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒邮件提醒"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_workflow_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:singleLine="true"
                    android:text="昨天"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/divider_line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_marketing_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/blue_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/write_circle" />

                    <TextView
                        android:id="@+id/tv_marketing_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="10万"
                        android:textColor="@color/txt_deep_gray"
                        android:textSize="@dimen/text_17" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="当日营销额"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_station_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/green_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/write_circle" />

                    <TextView
                        android:id="@+id/tv_station"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="昨天"
                        android:textColor="@color/txt_deep_gray"
                        android:textSize="@dimen/text_17" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_5"
                    android:text="销售台数"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_month_completion_rate_bg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/red_green_circle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/write_circle" />

                    <TextView
                        android:id="@+id/tv_month_completion_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="昨天"
                        android:textColor="@color/txt_deep_gray"
                        android:textSize="@dimen/text_13" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_5"
                    android:singleLine="true"
                    android:text="任务月度完成率"
                    android:textColor="@color/txt_deep_gray"
                    android:textSize="@dimen/text_13" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>